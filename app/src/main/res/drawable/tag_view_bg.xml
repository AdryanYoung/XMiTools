<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true" android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/colorPrimaryDisabled" />
            <solid android:color="@color/colorPrimaryDisabled" />
        </shape>
    </item>

    <item android:state_selected="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/colorPrimary" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

    <item android:state_selected="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/colorPrimaryDisabled" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/colorPrimary" />
        </shape>
    </item>

</selector>